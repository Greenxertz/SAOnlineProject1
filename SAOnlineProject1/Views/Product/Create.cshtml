@model SAOnlineProject1.Models.ProductViewModel

@{
    ViewData["Title"] = "Create a new product";
}

<h2>Create a new product</h2>

<div class="container">
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="form-horizontal">
        <div class="form-group row">
            <label asp-for="Products.Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Products.Name" class="form-control" />
                <span asp-validation-for="Products.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Products.Price" class="col-sm-2 col-form-label">Price</label>
            <div class="col-sm-10">
                <input asp-for="Products.Price" class="form-control" />
                <span asp-validation-for="Products.Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Products.CategoryId" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-10">
                <select asp-for="Products.CategoryId" asp-items="Model.CategoriesList" class="form-control">
                    <option value="">--Select a Category--</option>
                </select>
                <span asp-validation-for="Products.CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Products.Description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <textarea asp-for="Products.Description" class="form-control" placeholder="Max is 2000"></textarea>
                <span asp-validation-for="Products.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Images" class="col-sm-2 col-form-label">Images</label>
            <div class="col-sm-10">
                <input asp-for="Images" type="file" multiple class="form-control-file" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Inventories.Purchase_Price" class="col-sm-2 col-form-label">Purchase Price</label>
            <div class="col-sm-10">
                <input asp-for="Inventories.Purchase_Price" class="form-control" />
                <span asp-validation-for="Inventories.Purchase_Price" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Inventories.Quantity" class="col-sm-2 col-form-label">Quantity</label>
            <div class="col-sm-10">
                <input asp-for="Inventories.Quantity" class="form-control" />
                <span asp-validation-for="Inventories.Quantity" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
