@model IEnumerable<Category>

@if (@TempData["alertMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="btn-close text-dark" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @TempData["alertMessage"]
    </div>
}

<div class="PaddingAll">
    <div class="row mb-3">
        <div class="col-lg-7 col-md-5 col-sm-12">
            <h2 class="text-primary">Category List</h2>
            <hr />
        </div>
        <div class="col-lg-5 col-md-5 col-sm-12">
            <a asp-action="Upsert" asp-controller="Category" class="btn btn-primary form-control">Create Category</a>
        </div>
    </div>

    <div class="PadddingAllWhite">
        <div class="row">
            <div class="col">
                @if (Model.Count() > 0)
                {
                    <table class="table table-striped table-bordered table-dark rounded">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-12 pb-2">
                                            <a asp-action="Upsert" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary form-control">Edit</a>
                                        </div>
                                        <div class="col-lg-7 col-md-5 col-sm-12 pb-2">
                                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger form-control">Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <h4 class="text-warning">No categories available.</h4>
                }
            </div>
        </div>
    </div>
</div>
